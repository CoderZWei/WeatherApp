<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="8"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@mipmap/t1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:id="@+id/imageviewNow"
        />
   <TextView
       android:id="@+id/now"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="25°"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="50dp"
       android:textSize="140sp"
       android:textColor="@color/base_white"/>
    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多云22°到28°"
        android:layout_below="@+id/now"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@color/base_white"
        />
    <TextView
        android:id="@+id/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="东风2级"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/temperature"
        android:textSize="30sp"
        android:textColor="@color/base_white"
        />

</RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/base_white"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="5"
    android:orientation="horizontal"

    >
<RelativeLayout
    android:id="@+id/tomorrow1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
        android:text="明天"
        android:textSize="25sp"
        android:textColor="@color/base_white"/>
    <ImageView
        android:layout_below="@+id/text1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@mipmap/t1"
        android:id="@+id/imageview1"
        />
    <TextView
        android:id="@+id/temperature1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageview1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29°/21°"
        android:textSize="25sp"
        android:textColor="@color/base_white"/>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/tomorrow2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="后天"
            android:textSize="25sp"
            android:textColor="@color/base_white"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/text2"
            android:layout_centerHorizontal="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@mipmap/t1"
            android:id="@+id/imageview2"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/temperature2"
            android:layout_below="@+id/imageview2"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29°/21°"
            android:textSize="25sp"
            android:textColor="@color/base_white"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tomorrow3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="大后天"
            android:textSize="25sp"
            android:textColor="@color/base_white"
            />
        <ImageView
            android:layout_below="@+id/text3"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@mipmap/t1"
            android:id="@+id/imageview3"
            />
        <TextView
            android:id="@+id/temperature3"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imageview3"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29°/21°"
            android:textSize="25sp"
            android:textColor="@color/base_white"/>

    </RelativeLayout>
</LinearLayout>
</LinearLayout>